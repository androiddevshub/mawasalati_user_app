<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_margin="10dp">

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:id="@+id/img_delete_passenger"
        android:layout_weight="0"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Abdul"
        android:layout_toRightOf="@id/img_delete_passenger"
        android:id="@+id/tv_pd_name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_pd_name"
        android:id="@+id/tv_pd_age"
        android:textSize="20sp"
        android:layout_weight="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="Male"
        android:gravity="right"
        android:layout_toRightOf="@id/tv_pd_age"
        android:id="@+id/tv_pd_gender"
        android:textSize="20sp"
        android:layout_weight="0.1"/>




</LinearLayout>